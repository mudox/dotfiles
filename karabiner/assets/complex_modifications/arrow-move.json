{
  "title": "Arrow Moving Shortcuts",
  "rules": [
    {
      "description": "[Global] Fn + [H|J|K|L] to arrows",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "[Global] Option + [F|B|A|E]",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^co\\.zeit\\.hyper$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^co\\.zeit\\.hyper$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_command"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^co\\.zeit\\.hyper$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "right_option"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^net\\.kovidgoyal\\.kitty$",
                "^com\\.apple\\.Terminal$",
                "^com\\.googlecode\\.iterm2$",
                "^co\\.zeit\\.hyperterm$",
                "^co\\.zeit\\.hyper$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "right_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
