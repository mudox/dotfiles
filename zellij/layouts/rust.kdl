layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="tab-bar"
    }
    children
    pane size=1 borderless=true {
      plugin location="status-bar"
    }
  }

  tab name="main" split_direction="vertical" {
    pane name="edit" command="nvim"
    pane name="run" {
      command "mise"
      args "run" "watch-run-main"
    }
  }
}
