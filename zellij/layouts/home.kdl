layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="tab-bar"
    }
    children
    pane size=1 borderless=true {
      plugin location="status-bar"
    }
  }

  tab name="home" split_direction="vertical" {
    pane name="zsh" command="zsh"
    pane name="nu" command="nu"
  }
}
