layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="tab-bar"
    }
    children
    pane size=1 borderless=true {
      plugin location="status-bar"
    }
  }

  tab name="network" {
    pane stacked=true {
      pane name="http" cwd="~/Develop/HTTP/" {
        command "nvim"
        args "kulala.http"
      }
      pane name="surge" cwd="~/Library/Application Support/Surge/Profiles/" focus=true {
        command "nvim"
      }
    }
  }
}
