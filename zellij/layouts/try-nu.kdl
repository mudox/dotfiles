layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="tab-bar"
    }
    children
    pane size=1 borderless=true {
      plugin location="status-bar"
    }
  }

  tab name="try nu" split_direction="vertical" cwd="~/Develop/Nu/try-nu" {
    pane name="edit" {
      command "nvim"
      args "main.nu"
    }

    pane name="run" {
      command "watchexec"
      args "-rc" "-f" "main.nu" "--" "./main.nu"
    }
  }
}
